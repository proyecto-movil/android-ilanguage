<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opacity"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="586dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tbMenu"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="69dp"
                android:layout_marginBottom="39dp"
                android:backgroundTint="@color/btCancel"
                android:fontFamily="@font/roboto_medium"
                android:text="CANCEL"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="67dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="39dp"
                android:backgroundTint="@color/btAccept"
                android:fontFamily="@font/roboto_medium"
                android:text="Accept"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btCancel"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_profesora" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="61dp"
                android:layout_height="22dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="248dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Mary Doe"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="177dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/roboto_medium"
                android:text="English-Sport Soccer"
                app:layout_constraintBottom_toTopOf="@+id/cvImagen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="55dp"
                android:fontFamily="@font/roboto_medium"
                android:text="1 h"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvImagen" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvImagen"
                android:layout_width="413dp"
                android:layout_height="154dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:background="@color/cardview"
                app:cardBackgroundColor="@color/cardview"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                tools:layout_editor_absoluteX="-1dp">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/ic_wallfutbol" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="46dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Hi, Jhon!"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvImagen" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="386dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="In this class we have a conversation about sports,on specifically soccer."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Use this link to enter the class."
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="https:www.zoom.com/110000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="See you at meetin :)!"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tvNav"
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:background="@color/backgroundILanguage"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btChat"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNav"
        app:layout_constraintStart_toEndOf="@+id/tvNav"
        app:srcCompat="@mipmap/ic_chat" />

    <ImageButton
        android:id="@+id/btNotification"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginStart="-180dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNav"
        app:layout_constraintStart_toEndOf="@+id/tvNav"
        app:srcCompat="@mipmap/ic_notification" />

    <ImageButton
        android:id="@+id/btSearch"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginStart="-270dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNav"
        app:layout_constraintStart_toEndOf="@+id/tvNav"
        app:srcCompat="@mipmap/ic_search" />

    <ImageButton
        android:id="@+id/btHome"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginStart="-370dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNav"
        app:srcCompat="@mipmap/ic_home" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbMenu"
        android:layout_width="412dp"
        android:layout_height="59dp"
        android:background="@color/backgroundILanguage"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView


        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-340dp"
        android:layout_marginTop="16dp"
        android:text="ILanguage"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/tbMenu"
        app:layout_constraintTop_toTopOf="@+id/tbMenu" />

    <ImageButton
        android:id="@+id/btBack"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@+id/tbMenu"
        app:srcCompat="@mipmap/ic_back"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="52dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-385dp"
        app:layout_constraintEnd_toStartOf="@+id/tbMenu"
        app:layout_constraintTop_toTopOf="@+id/tbMenu"
        app:srcCompat="@mipmap/ic_estudiante2" />

</androidx.constraintlayout.widget.ConstraintLayout>